<p id="notice"><%= notice %></p>

<h1>Listing Cinemas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Webpage</th>
      <th>Promotion name</th>
      <th>Promotion desc</th>
      <th>Enabled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cinemas.each do |cinema| %>
      <tr>
        <td><%= cinema.name %></td>
        <td><%= cinema.address %></td>
        <td><%= cinema.webpage %></td>
        <td><%= cinema.promotion_name %></td>
        <td><%= cinema.promotion_desc %></td>
        <td><%= cinema.enabled %></td>
        <td><%= link_to 'Show', cinema %></td>
        <td><%= link_to 'Edit', edit_cinema_path(cinema) %></td>
        <td><%= link_to 'Destroy', cinema, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

